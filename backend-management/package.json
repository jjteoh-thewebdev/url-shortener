{
    "name": "backend-management",
    "version": "1.0.0",
    "description": "A API server for managing urls. Built using Typescript + Express + Postgres",
    "main": "dist",
    "author": "JJ Teoh <thewebdev.jjteoh@gmail.com>",
    "license": "MIT",
    "scripts": {
        "build": "npm run tsc",
        "tsc": "tsc -p tsconfig.json",
        "dev": "tsc --watch & NODE_ENV=development nodemon dist",
        "test": "tsc && ./node_modules/.bin/mocha dist/**/*.spec.js",
        "lint": "tslint 'src/**/*.ts' --fix",
        "clean": "rm -rf dist/ .logs/",
        "start": "node dist"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "nodemonConfig": {
        "watch": [
            "src"
        ],
        "exec": "tsc && node ./dist/index.js",
        "ext": "ts,js,json"
    },
    "dependencies": {
        "@prisma/client": "^6.5.0",
        "bcrypt": "^5.1.1",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "helmet": "^8.1.0",
        "http-status-codes": "^2.3.0",
        "reflect-metadata": "^0.2.2",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/cors": "^2.8.17",
        "@types/dotenv": "^6.1.1",
        "@types/express": "^5.0.1",
        "@types/node": "^22.13.13",
        "nodemon": "^3.1.9",
        "prisma": "^6.5.0",
        "tsx": "^4.19.3",
        "typescript": "^5.8.2"
    }
}
